<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.wzeqiu.mediacode.MediaProcessorSampleActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="音视频处理示例"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="8dp">

        <Button
            android:id="@+id/btn_select_video"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选择视频"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/btn_select_audio"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="选择音频"
            android:layout_marginStart="4dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_get_video_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取媒体信息"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_extract_audio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提取音频"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btn_trim_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="裁剪视频(前10秒)"
        android:layout_marginBottom="16dp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="14sp"
            android:text="请选择媒体文件开始操作"
            android:background="#f5f5f5" />

    </ScrollView>

</LinearLayout> 